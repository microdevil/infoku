<% flash.each do |name, msg| %>
  <% if msg.is_a?(String) %>
    <div class="container">
        <div class="row">
          <div class="alert alert-warning alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <strong><%= content_tag :div, msg, :class => "flash_#{name}" %></strong> 
          </div>
        </div>
    </div>
  <% end %>
<% end %>